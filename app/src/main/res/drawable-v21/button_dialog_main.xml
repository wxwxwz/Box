<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/color_theme_dark_70">
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:state_focused="true"
                android:state_pressed="true">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/movie_recommend_item_frame_width" android:color="?attr/color_theme" />
                    <solid android:color="?attr/color_theme" />
                    <corners android:radius="@dimen/movie_recommend_item_radius" />
                </shape>
            </item>
            <item
                android:state_focused="false"
                android:state_pressed="true">
                <shape>
                    <stroke android:width="@dimen/movie_recommend_item_frame_width" android:color="?attr/color_theme" />
                    <solid android:color="?attr/color_theme" />
                    <corners android:radius="@dimen/movie_recommend_item_radius" />
                </shape>
            </item>
            <item android:state_focused="true">
                <shape>
                    <solid android:color="@color/white_10" />
                    <corners android:radius="@dimen/movie_recommend_item_radius" />
                </shape>
            </item>
            <item
                android:state_focused="false"
                android:state_pressed="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white_10" />
                    <corners android:radius="@dimen/movie_recommend_item_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>