<?xml version="1.0" encoding="utf-8"?>
<selector android:color="?attr/color_theme"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="?attr/color_theme" android:endColor="?attr/color_theme_80" android:angle="180.0" />
            <corners android:radius="@dimen/movie_index_item_radius" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="?attr/color_theme" />
            <corners android:radius="@dimen/movie_index_item_radius" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners android:radius="0.0dip" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners android:radius="0.0dip" />
        </shape>
    </item>
</selector>