<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background -->
    <item
        android:id="@android:id/background"
        >
        <shape >
            <stroke android:width="@dimen/vs_2" android:color="@color/media_center_dialog_progress"/>
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                />

            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <!-- progress -->
    <item android:id="@android:id/progress">
        <clip>
        <shape >
            <stroke android:width="1.5mm" android:color="@android:color/transparent"/>
            <gradient
                android:startColor="@color/media_center_dialog_progress"
                android:endColor="@color/media_center_dialog_progress"/>

        </shape>
        </clip>
    </item>
    <!-- second progress -->

    <item android:id="@android:id/secondaryProgress">
        <clip>
        <shape >
            <gradient
                android:startColor="@color/transparent"
                android:endColor="@color/transparent"/>

        </shape>
        </clip>
    </item>
</layer-list>