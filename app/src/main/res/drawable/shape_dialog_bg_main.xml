<?xml version="1.0" encoding="utf-8"?>
<layer-list android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape >
            <stroke android:width="4dp" android:color="@color/media_center_bg_side"/>
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                />
            <corners android:radius="5dp"/>

        </shape>
    </item>

    <item >
        <shape >
            <corners android:radius="2dp"/>
            <gradient
                android:startColor="@color/media_center_bg_start"
                android:centerColor="@color/media_center_bg_center"
                android:endColor="@color/media_center_bg_end"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>

</layer-list>